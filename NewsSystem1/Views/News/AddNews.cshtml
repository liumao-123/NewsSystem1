
@{
    ViewBag.Title = "AddNews";
}

<head>
    <link rel="stylesheet" href="/CSS/layui.css">
</head>

<div class="layui-layout layui-layout-admin">
    <div class="layui-header">
        <div class="layui-logo layui-hide-xs layui-bg-black">新闻管理系统</div>
    </div>

    <div class="layui-side layui-bg-black">
        <div class="layui-side-scroll">
            <!-- 左侧导航区域（可配合layui已有的垂直导航） -->
            <ul class="layui-nav layui-nav-tree" lay-filter="test">
                <li class="layui-nav-item layui-nav-itemed">
                    <a class="" href="javascript:;">主菜单</a>
                    <dl class="layui-nav-child">
                        <dd><a href="javascript:;">首页</a></dd>
                        <dd><a href="javascript:;">发布新闻</a></dd>
                    </dl>
                </li>
            </ul>
        </div>
    </div>

    <div class="layui-body">
        <!-- 内容主体区域 -->
        <div style="padding: 15px;">
            编辑内容

            <br><br>
            <div class="layui-form" action="">
                <div class="layui-form-item">
                    <label class="layui-form-label">作者</label>
                    <div class="layui-input-block">
                        <input type="text" name="username" id="username" required lay-verify="required" placeholder="" autocomplete="off" class="layui-input" value="admin">
                    </div>
                </div>
                <div class="layui-form" action="">
                    <div class="layui-form-item">
                        <label class="layui-form-label">标题</label>
                        <div class="layui-input-block">
                            <input type="text" name="title" id="title" required lay-verify="required" placeholder="请输入标题" autocomplete="off" class="layui-input">
                        </div>
                    </div>
                    <div class="layui-form-item layui-form-text">
                        <label class="layui-form-label">新闻内容</label>
                        <div class="layui-input-block">
                            <textarea name="desc" id="desc" placeholder="请输入内容" class="layui-textarea"></textarea>
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <div class="layui-input-block">
                            <button id="btnsend" class="layui-btn" lay-submit lay-filter="formDemo">立即提交</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="layui-footer">
            <!-- 底部固定区域 -->
            底部固定区域
            统计：
        </div>
    </div>

    <script>
    $(function () {
        $("#btnsend").click(function () {
            $.ajax({
                url: '/News/AddNewsAction',
                type: 'post',
                data: {
                    'title': $('#title').val(),
                    'desc': $('#desc').val(),
                },
                success: function (msg) {
                    if (msg == "添加成功") {
                        location.href = '/News/Index';
                    }
                    else {
                        layer.open({
                            title: '警告',
                            content: '标题或内容不能为空'
                        });
                    }
                },

            });
        });
    });

    </script>


